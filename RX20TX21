#include <samd20.h>
#include "SEGGER_RTT.h"

#define I2C_SLAVE_ADDRESS 0x10 // I2C Slave Address

volatile uint8_t i2c_received_data[16]; // Буфер для полученных данных
volatile uint8_t i2c_index = 0;         // Текущий индекс буфера

void configure_clocks(void) {
    // Включаем тактирование для SERCOM5
    PM->APBCMASK.reg |= PM_APBCMASK_SERCOM5;

    // Настройка GCLK для SERCOM5
    GCLK->CLKCTRL.reg = GCLK_CLKCTRL_ID(SERCOM5_GCLK_ID_CORE) |
                        GCLK_CLKCTRL_GEN(0) |  // Используем GCLK0
                        GCLK_CLKCTRL_CLKEN;
    while (GCLK->STATUS.bit.SYNCBUSY); // Ждем синхронизации
}

void configure_pins(void) {
    // Настроим PA22 (SDA) и PA23 (SCL) для SERCOM5
    PORT->Group[0].PINCFG[22].reg = PORT_PINCFG_PMUXEN | PORT_PINCFG_INEN; // SDA
    PORT->Group[0].PINCFG[23].reg = PORT_PINCFG_PMUXEN | PORT_PINCFG_INEN; // SCL

    // Устанавливаем альтернативную функцию D для SERCOM5
    PORT->Group[0].PMUX[22 >> 1].reg |= PORT_PMUX_PMUXE(0x3); // PA22 (SDA), Function D
    PORT->Group[0].PMUX[23 >> 1].reg |= PORT_PMUX_PMUXO(0x3); // PA23 (SCL), Function D
}

void configure_i2c_slave(void) {
    // Сбрасываем SERCOM5
    SERCOM5->I2CS.CTRLA.reg = SERCOM_I2CS_CTRLA_SWRST;
    while (SERCOM5->I2CS.CTRLA.bit.SWRST);

    // Настроим SERCOM5 как I2C Slave
    SERCOM5->I2CS.CTRLA.reg = SERCOM_I2CS_CTRLA_MODE_I2C_SLAVE;

    // Устанавливаем адрес слейва
    SERCOM5->I2CS.ADDR.reg = SERCOM_I2CS_ADDR_ADDR(I2C_SLAVE_ADDRESS);

    // Включаем модуль SERCOM5
    SERCOM5->I2CS.CTRLA.reg |= SERCOM_I2CS_CTRLA_ENABLE;

    // Включаем прерывания: данные готовы (DRDY)
    SERCOM5->I2CS.INTENSET.reg = SERCOM_I2CS_INTENSET_DRDY;

    // Настройка NVIC для обработки прерываний от SERCOM5
    NVIC_ClearPendingIRQ(SERCOM5_IRQn);
    NVIC_SetPriority(SERCOM5_IRQn, 3);
    NVIC_EnableIRQ(SERCOM5_IRQn);

    SEGGER_RTT_WriteString(0, "I2C Slave configured on SERCOM5\n");
}

void SERCOM5_Handler(void) {
    SEGGER_RTT_WriteString(0, "Interrupt triggered\n");

    // Проверяем, есть ли готовые данные
    if (SERCOM5->I2CS.INTFLAG.bit.DRDY) {
        SEGGER_RTT_WriteString(0, "Data Ready\n");

        // Чтение данных
        uint8_t received_byte = SERCOM5->I2CS.DATA.reg;
        SEGGER_RTT_printf(0, "Received: 0x%02X\n", received_byte);

        // Сохраняем данные в буфер
        i2c_received_data[i2c_index++] = received_byte;
        if (i2c_index >= sizeof(i2c_received_data)) {
            i2c_index = 0; // Перезаписываем при переполнении буфера
        }
    }

    // Проверяем наличие ошибок на шине
    if (SERCOM5->I2CS.STATUS.bit.BUSERR) {
        SEGGER_RTT_WriteString(0, "Bus error detected\n");
        SERCOM5->I2CS.STATUS.reg |= SERCOM_I2CS_STATUS_BUSERR; // Сброс флага ошибки
    }

    if (SERCOM5->I2CS.STATUS.bit.COLL) {
        SEGGER_RTT_WriteString(0, "Collision detected\n");
        SERCOM5->I2CS.STATUS.reg |= SERCOM_I2CS_STATUS_COLL; // Сброс флага ошибки
    }
}

int main(void) {
    SystemInit();
    SEGGER_RTT_Init();
    SEGGER_RTT_WriteString(0, "I2C Slave Initialized\n");

    configure_clocks();
    configure_pins();
    configure_i2c_slave();

    // Основной цикл
    while (1) {
        __WFI(); // Ожидаем прерываний
    }
}
